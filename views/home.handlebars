<h2>Welcome to my blog!</h2>
    <h3>Current Recepies:</h3>
<!-- Loop over each object in the projects array -->
{{#each recipeposts as |userrecipe| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
    
      <button id="dopdown-button" href="/api/blogpost/{{userrecipe.r_id}}">{{userrecipe.title}}</button>
    </h2>
    <div class="dropdown">
            <span class="selected">
                <p href="/api/blogpost/{{userrecipe.r_id}}">{{userrecipe.ingredients}}</a>
            </span>
            <span>
                 <a href="{{userrecipe.instructions}}"> The instructions Are Here : {{userrecipe.instructions}}</a>
            </span>
    </div>
    <p>Created by {{userrecipe.user.username}} on {{format_date userrecipe.createdAt}}</p>
  </div>
  
</div>
{{/each}}

 <script src="./js/home.js"></script>