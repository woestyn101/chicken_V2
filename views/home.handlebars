<h2>Welcome to my blog!</h2>
    <h3>Current Recepies:</h3>
<!-- Loop over each object in the projects array -->

{{#each recipeposts as |userrecipe| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <h2>
      <button class="dropdown-button">{{userrecipe.title}}</button>
      
    </h2>
    <div class="dropdown" style="display: none;">
            <span class="selected">
                <p href="/api/blogpost/{{userrecipe.r_id}}">{{userrecipe.ingredients}}</a>
            </span>
            <span>
                 <a id="instructions" href="{{userrecipe.instructions}}"> The instructions Are Here : {{userrecipe.instructions}}</a>
            </span>
    </div>
    <p>Created by {{userrecipe.user.username}} on {{format_date userrecipe.createdAt}}</p>
  </div>
 
</div>
{{/each}}
<script src="./js/home.js"></script>
 

